@using Libra.Contract

@{
    ViewBag.Title = "List";
}

@{
    ViewBag.Module = NavigationModule.RECALCULATE;
    ViewBag.Title = Html.Translate(Navigation.Modules[(string)ViewBag.Module].Title);

}



    <div ng-controller="recalculateInvoiceListController">

        <libra-issues source="model.issues"></libra-issues>


        <div class="form-group col-sm-3">
            <input type="file" name="file" ngf-max-files="1" ngf-drop="" ngf-select="selectFile($file)" class="form-control col-sm-12" placeholder="Upload file" accept=".xlsx" />
        </div>
        <div class="form-group col-sm-2">
            <button class="btn btn-primary" ng-click="import()">
                <span class="fa fa-upload"></span>
                @Html.Translate("RECALCULATE_INVOICE_LOAD_BUTTON_TEXT")
            </button>
            <br />
            
        </div>



        <table ng-cloak class="table table-striped table-hover selectable-list">
            <thead>
                <tr>
                    <th>
                        @Html.Translate("RECALCULATE_LIST_INVOICE_NUMBER")
                    </th>
                    <th>
                        @Html.Translate("RECALCULATE_LIST_STATUS")
                    </th>
                    <th>
                        @Html.Translate("RECALCULATE_LIST_ERROR")
                    </th>
                </tr>
            </thead>
            <tbody ng-repeat="invoice in model.invoices">
                <tr>
                    <td>{{invoice.invoiceNumber}}</td>
                    <td>{{invoice.status}}</td>
                    <td>{{invoice.error}}</td>
                </tr>
            </tbody>
        </table>

    </div>



